{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        // CTRL+SHIFT+B shortcut
        {
            "label": "Build (dev, without image rebuild)",
            "type": "shell",
            "command": "npm run build:dev",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Resources: watch and auto-rebuild graphics",
            "type": "shell",
            "command": "npm run start-graphics",
            "problemMatcher": [],
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "Build (dev, all)",
            "type": "shell",
            "command": "npm run build-all:dev",
            "problemMatcher": []
        },
        {
            "label": "Resources: png images to base 64",
            "type": "shell",
            "command": "npm run build-graphics",
            "problemMatcher": []
        },
        {
            "label": "Initial: Get TypeScript definitions for OpenRCT2",
            "type": "shell",
            "command": "wget https://raw.githubusercontent.com/OpenRCT2/OpenRCT2/refs/heads/develop/distribution/openrct2.d.ts -P lib",
            "problemMatcher": []
        },
        {
            "label": "Initial: $ npm install",
            "type": "shell",
            "command": "npm install",
            "problemMatcher": []
        }
    ]
}